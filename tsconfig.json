{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "skipLibCheck": true
  },
  "include":[ 
    "src/**/*"
  ],
  "exclude":[ 
    "node_modules" 
  ]
}
